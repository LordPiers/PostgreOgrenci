@model IEnumerable<PostgreOgrenci.Models.Ogrenci>

@{
    Layout = null;
}





<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <title>RTcY</title>
</head>


<body>

    <script type="text/javascript">
        function deleteFunction(number) {
            var x = document.getElementById("myTable").rows[number].cells;
            //x[0]
        @Html.ActionLink("Grid", "Home");

        }
    </script>



    <div class="container">
        <h2>Button Styles</h2>
        @using (Html.BeginForm("Grid", "Home"))
        {
            <input type="text" name="Variable" />

            <button type="submit" class="btn" value="passbasic">Basic</button>

            <button type="button" class="btn btn-primary">Primary</button>
            <button type="button" class="btn btn-success">Success</button>
            <button type="button" class="btn btn-info">Info</button>
            <button type="button" class="btn btn-warning">Warning</button>
            <button type="button" class="btn btn-danger">Danger</button>
            <button type="button" class="btn btn-dark">Dark</button>
        }
        @using (Html.BeginForm("Delet", "Home"))
        {
            <input type="text" name="Delete" />
            <button type="submit" class="btn btn-secondary">Deneme</button>
        }
        @using (Html.BeginForm("Insert", "Home"))
        {
            <input type="text" name="isim" />
            <input type="text" name="soyisim" />
            <input type="text" name="email" />

            <button type="submit" class="btn btn-warning">Insert</button>
        }
        @using (Html.BeginForm("Update", "Home"))
        {
            <input type="text" name="isim" />
            <input type="text" name="soyisim" />
            <input type="text" name="email" />

            <button type="submit" class="btn btn-warning">Update</button>
        }



    </div>

    <div class="container">
        <h2>Postgre Ogrenci Web App</h2>
        <p>Öğrenci Listesi</p>

        <table class="table table-striped table-bordered">
            <thead>
                <tr>

                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Email</th>
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.isim</td>
                        <td>@d.soyisim</td>
                        <td>@d.email</td>
                        <td width="230">
                            <div align="center">
                                @Html.ActionLink("DELETE", "Delet", "Home", new { delete = d.Id }, new { @class = "btn btn-secondary" })
                                <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#myModal">UPDATE</button>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">s
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        
                    </div>
                    <div class="modal-body">
                        <div align="center">
                            @using (Html.BeginForm("Update", "Home"))
                            {
                            <input type="text" /> <input type="text" /> <input type="text" />
                            <button type="submit" class="btn btn-warning">Insert</button>
                            }
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

</body>

</html>
